@model NamaProyekAnda.Models.Issue

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
<h2>Delete Issue</h2>

<h4>Are you sure you want to delete this issue?</h4>
<hr />
<div>
    <h4>Issue</h4>
    <hr />
    <dl class="row">


        <dt class="col-sm-2">Tgl</dt>
        <dd class="col-sm-10">@Model.Tgl</dd>

        <dt class="col-sm-2">Jenis</dt>
        <dd class="col-sm-10">@Model.Jenis</dd>

        <dt class="col-sm-2">Detail Issue</dt>
        <dd class="col-sm-10">@Model.DetailIssue</dd>

        <dt class="col-sm-2">Nama Brand</dt>
        <dd class="col-sm-10">@Model.NamaBrand</dd>

        <dt class="col-sm-2">Nama Vendor</dt>
        <dd class="col-sm-10">@Model.NamaVendor</dd>

        <dt class="col-sm-2">Jenis Vendor</dt>
        <dd class="col-sm-10">@Model.JenisVendor</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

</div>
